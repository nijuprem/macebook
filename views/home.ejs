
<h1>
    MaceBook / <%= title %>
</h1>


<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
        <form action="/post/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="Type Here..."></textarea><br>
            <input type="submit" value="Post">
        </form>
    <%} %>

    <div class="list-container">
        <ul>
            <% for(post of posts){ %>
                <li>
                    <p>
                        <%= post.content %>
                    </p>
                    <%= post.user.name %>
                </li>
            <% } %>
        </ul>
    </div>

</section> 